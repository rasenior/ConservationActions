@article{ward_only_2020,
	title        = {Only ten percent of the global terrestrial protected area network is connected via intact land},
	author       = {Ward, Michelle and Saura, Santiago and Williams, Brooke and Ramírez-Delgado, Juan Pablo and Arafeh-Dalmau, Nur and Allan, James R. and Venter, Oscar and Dubois, Grégoire and Watson, James E. M.},
