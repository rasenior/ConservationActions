}
@article{geldmann_insights_2019,
	title        = {Insights from two decades of the {Student} {Conference} on {Conservation} {Science}},
	author       = {Geldmann, Jonas and Alves-Pinto, Helena and Amano, Tatsuya and Bartlett, Harriet and Christie, Alec P. and Collas, Lydia and Cooke, Sophia C. and Correa, Roberto and Cripps, Imogen and Doherty, Anya and Finch, Tom and Garnett, Emma E. and Hua, Fangyuan and Jones, Julia Patricia Gordon and Kasoar, Tim and MacFarlane, Douglas and Martin, Philip A. and Mukherjee, Nibu and Mumby, Hannah S. and Payne, Charlotte and Petrovan, Silviu O. and Rocha, Ricardo and Russell, Kirsten and Simmons, Benno I. and Wauchope, Hannah and Worthington, Thomas A. and Trevelyan, Rosie and Green, Rhys and Balmford, Andrew},
