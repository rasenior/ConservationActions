@article{jones_one-third_2018,
	title        = {One-third of global protected land is under intense human pressure},
	author       = {Jones, Kendall R. and Venter, Oscar and Fuller, Richard A. and Allan, James R. and Maxwell, Sean L. and Negret, Pablo Jose and Watson, James E. M.},
