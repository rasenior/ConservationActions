}
@article{green_linking_2019,
	title        = {Linking global drivers of agricultural trade to on-the-ground impacts on biodiversity},
	author       = {Green, Jonathan M. H. and Croft, Simon A. and Durán, América P. and Balmford, Andrew P. and Burgess, Neil D. and Fick, Steve and Gardner, Toby A. and Godar, Javier and Suavet, Clément and Virah-Sawmy, Malika and Young, Lucy E. and West, Christopher D.},
	year         = 2019,
