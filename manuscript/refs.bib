	author       = {Henriques, Sérgio and Böhm, Monika and Collen, Ben and Luedtke, Jennifer and Hoffmann, Michael and Hilton‐Taylor, Craig and Cardoso, Pedro and Butchart, Stuart H. M. and Freeman, Robin},
	year         = 2020,
	journal      = {Conservation Letters},
	volume       = 13,
