@article{verissimo_using_2014,
	title        = {Using a {Systematic} {Approach} to {Select} {Flagship} {Species} for {Bird} {Conservation}},
	author       = {Veríssimo, Diogo and Pongiluppi, Tatiana and Santos, Maria Cintia M. and Develey, Pedro F. and Fraser, Iain and Smith, Robert J. and Macmilan, Douglas C.},
