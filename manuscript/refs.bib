	doi          = {10.1641/0006-3568(2004)054[1092:ggaprf]2.0.co;2},
	issn         = {0006-3568},
	url          = {https://www.jstor.org/stable/10.1641/0006-3568(2004)054[1092:ggaprf]2.0.co;2},
	urldate      = {2019-06-19},
	abstract     = {AbstractProtected areas are the single most important conservation tool. The global protected-area network has grown substantially in recent decades, now occupying 11.5\% of Earth's land surface, but such growth has not been strategically aimed at maximizing the coverage of global biodiversity. In a previous study, we demonstrated that the global network is far from complete, even for the representation of terrestrial vertebrate species. Here we present a first attempt to provide a global framework for the next step of strategically expanding the network to cover mammals, amphibians, freshwater turtles and tortoises, and globally threatened birds. We identify unprotected areas of the world that have remarkably high conservation value (irreplaceability) and are under serious threat. These areas concentrate overwhelmingly in tropical and subtropical moist forests, particularly on tropical mountains and islands. The expansion of the global protected-area network in these regions is urgently needed to prevent the loss of unique biodiversity.},
}
@article{ricketts_pinpointing_2005,
	title        = {Pinpointing and preventing imminent extinctions},
	author       = {Ricketts, Taylor H. and Dinerstein, Eric and Boucher, Tim and Brooks, Thomas M. and Butchart, Stuart H. M. and Hoffmann, Michael and Lamoreux, John F. and Morrison, John and Parr, Mike and Pilgrim, John D. and Rodrigues, Ana S. L. and Sechrest, Wes and Wallace, George E. and Berlin, Ken and Bielby, Jon and Burgess, Neil D. and Church, Don R. and Cox, Neil and Knox, David and Loucks, Colby and Luck, Gary W. and Master, Lawrence L. and Moore, Robin and Naidoo, Robin and Ridgely, Robert and Schatz, George E. and Shire, Gavin and Strand, Holly and Wettengel, Wes and Wikramanayake, Eric},
	year         = 2005,
	month        = dec,
	journal      = {Proceedings of the National Academy of Sciences},
